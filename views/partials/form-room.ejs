<form action="/room/addRoom" method="POST" class="border p-2">
    <div class="form-group">
        <label for="roomName">Room Name:</label>
        <input type="text" class="form-control" id="roomName" name="roomName"  placeholder="Enter room name">
    </div>
    <div class="form-group">
        <label for="roomPic">Room Picture:</label>
        <input type="text" class="form-control" id="roomPic" name="roomPic"  placeholder="Enter Image Address">
    </div>
    <div class="form-group">
        <label for="roomLimit">Room Limit:</label>
        <input type="number" class="form-control" id="roomLimit" name="roomLimit" placeholder="Enter room limit">
    </div>
    <div class="form-group">
        <label for="roomPrice">Room Price:</label>
        <input type="number" class="form-control" id="roomPrice" name="roomPrice" placeholder="Enter room price">
    </div>
    <input type="submit" class="btn btn-primary mt-1" value="Submit">
</form>